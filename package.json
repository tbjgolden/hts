{
  "name": "just-run",
  "description": "Run a Node file (written in any JS/TS variant) from the CLI",
  "version": "0.0.0",
  "main": "lib/index.mjs",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "bin": {
    "run": "./dist/run.mjs",
    "just-run": "./dist/run.mjs"
  },
  "scripts": {
    "help": "./cli/run.mjs ./.scripts/help.ts",
    "help:name": "echo 'Rename npm project'",
    "name": "./cli/run.mjs ./.scripts/name.ts",
    "help:build": "echo 'Build npm project'",
    "build": "esr ./.scripts/build.ts"
  },
  "files": [
    "lib"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^5.27.1",
    "astring": "1.8.3",
    "esprima-next": "5.8.3",
    "sucrase": "3.21.0"
  },
  "devDependencies": {
    "enquirer": "^2.3.6"
  }
}
