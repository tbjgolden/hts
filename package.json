{
  "name": "xnr",
  "description": "Easily run any Node.js script (written in any JS/TS syntax) from the CLI.",
  "license": "Apache-2.0",
  "version": "0.3.0-alpha.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/cjs/index.d.ts",
  "bin": {
    "xnr": "./cli/run.mjs",
    "xnrb": "./cli/build.mjs"
  },
  "prettier": {
    "printWidth": 90
  },
  "scripts": {
    "help": "esr ./.scripts/help.ts",
    "help:name": "echo 'Rename npm project'",
    "name": "esr ./.scripts/name.ts",
    "help:build": "echo 'Build npm project'",
    "build": "esr ./.scripts/build.ts",
    "help:test": "echo 'Run tests once'",
    "test": "npm run build && node ./tests/index.mjs",
    "help:lint": "echo 'Lint all files, output to stdout'",
    "lint": "eslint lib",
    "help:types": "echo 'Typecheck all TS files, output to stdout'",
    "types": "tsc --noEmit && echo 'Type-checking passed'",
    "help:prepare": "echo 'Install (or reinstall) git hooks'",
    "prepare": "husky install && rm -rf .git/hooks && ln -s ../.husky .git/hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/dedent": "^0.7.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "dedent": "^0.7.0",
    "enquirer": "^2.3.6",
    "esbuild": "^0.14.11",
    "esbuild-runner": "^2.2.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.4"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "astring": "1.8.3",
    "esprima-next": "5.8.3",
    "get-tsconfig": "4.0.4",
    "sucrase": "3.21.0"
  }
}
